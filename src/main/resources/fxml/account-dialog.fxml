<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bookkeeping.controller.AccountDialogController">
   <children>
      <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Account Information" />
      <GridPane hgap="10.0" vgap="10.0">
        <columnConstraints>
          <ColumnConstraints hgrow="NEVER" minWidth="100.0" />
          <ColumnConstraints hgrow="ALWAYS" minWidth="250.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="30.0" vgrow="NEVER" />
          <RowConstraints minHeight="30.0" vgrow="NEVER" />
          <RowConstraints minHeight="30.0" vgrow="NEVER" />
          <RowConstraints minHeight="30.0" vgrow="NEVER" />
            <RowConstraints minHeight="30.0" vgrow="NEVER" />
            <RowConstraints minHeight="80.0" vgrow="NEVER" />
        </rowConstraints>
         <children>
            <Label text="Account Code*:" />
            <TextField fx:id="accountCodeField" promptText="e.g., 1100" GridPane.columnIndex="1" />
            <Label text="Account Name*:" GridPane.rowIndex="1" />
            <TextField fx:id="accountNameField" promptText="e.g., Cash" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Label text="Account Type*:" GridPane.rowIndex="2" />
            <ComboBox fx:id="accountTypeComboBox" maxWidth="1.7976931348623157E308" promptText="Select account type" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <Label text="Balance:" GridPane.rowIndex="3" />
            <TextField fx:id="balanceField" promptText="0.00" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <Label text="Active:" GridPane.rowIndex="4" />
            <CheckBox fx:id="isActiveCheckBox" mnemonicParsing="false" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            <Label text="Description:" GridPane.rowIndex="5" />
            <TextArea fx:id="descriptionArea" prefRowCount="3" promptText="Optional description" GridPane.columnIndex="1" GridPane.rowIndex="5" />
         </children>
      </GridPane>
      <HBox alignment="CENTER_RIGHT" spacing="10.0">
         <children>
            <Button fx:id="okButton" defaultButton="true" onAction="#handleOk" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Save" />
            <Button fx:id="cancelButton" cancelButton="true" onAction="#handleCancel" style="-fx-background-color: #f44336; -fx-text-fill: white;" text="Cancel" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
